<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:control="clr-namespace:NotWinForm.Views.Controls;assembly=NotWinForm"
             mc:Ignorable="d" d:DesignWidth="400" d:DesignHeight="125"
             x:Class="NotWinForm.Views.Partials.OutputSettingsView">
  <StackPanel Spacing="8"
                  Margin="20">
    <Grid ColumnDefinitions="1*,3*"
          RowDefinitions="40,40"
          HorizontalAlignment="Stretch">
      <TextBlock Grid.Row="0"
                 Grid.Column="0"
                 VerticalAlignment="Center">Seed</TextBlock>

      <TextBox HorizontalAlignment="Stretch"
               Grid.Row="0"
               Grid.Column="1"
               Height="30">1337</TextBox>

      <Button Grid.Row="1"
              Grid.ColumnSpan="2"
              HorizontalAlignment="Stretch"
              Height="40"
              Background="#99119EDA"
              FontSize="18">Randomize</Button>
    </Grid>
  </StackPanel>
</UserControl>
