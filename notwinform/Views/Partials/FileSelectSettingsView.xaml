<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:vm="clr-namespace:NotWinForm.ViewModels;assembly=NotWinForm"
             xmlns:dd="clr-namespace:NotWinForm.Design;assembly=NotWinForm"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             x:Class="NotWinForm.Views.Partials.FileSelectSettingsView"
             mc:Ignorable="d"
             d:DesignWidth="400" d:DesignHeight="50"
             d:DataContext="{x:Static dd:ViewModels.ExampleFileSelect}">
  <StackPanel VerticalAlignment="Center">
    <StackPanel Orientation="Horizontal"
                HorizontalAlignment="Center">
      <Button Command="{Binding OpenBrowserCommand}"
              Content="{Binding ButtonText}"/>

      <TextBox Width="200"
               IsReadOnly="True"
               Text="{Binding SelectedFilePath}"
               TextWrapping="NoWrap"/>

    </StackPanel>

    <TextBlock HorizontalAlignment="Center"
               Text="{Binding DescriptionText}" />
  </StackPanel>
</UserControl>
