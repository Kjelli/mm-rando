<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:dd="clr-namespace:NotWinForm.Design;assembly=NotWinForm"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="clr-namespace:NotWinForm.ViewModels;assembly=NotWinForm"
             mc:Ignorable="d" d:DesignWidth="400" d:DesignHeight="40"
             x:Class="NotWinForm.Views.Controls.ColorPickerView">
  <Grid HorizontalAlignment="Stretch"
        ColumnDefinitions="150,200"
        RowDefinitions="40">
    <TextBlock Text="{Binding SettingLabel}"
               VerticalAlignment="Center"
               HorizontalAlignment="Left"
               Grid.Column="0"
               Grid.Row="0"/>
    <Button Grid.Row="0"
            Grid.Column="1"
            Width="200"
            Height="30"
            Background="{Binding SelectedColor}"/>
  </Grid>
</UserControl>
